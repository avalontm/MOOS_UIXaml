<Window x:Class="UIMoos"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="MOOS GUI" Width="300" Height="350" Background="#212121" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Command="{Binding ElementName=ClickMeCommand}" Background="#a83271" Foreground="#ffffff" Margin="5" Content="Button1" BorderBrush="#ffffff" BorderThickness="2"/>
        <Button Grid.Row="1" Command="{Binding ElementName=ClickMeCommand}" Background="#bd3d2a" Foreground="#ffffff" Margin="5" Content="Button2" BorderBrush="#ffffff" BorderThickness="2"/>
        <Button Grid.Row="2" Command="{Binding ElementName=ClickMeCommand}" Background="#53b01e" Foreground="#ffffff" Margin="5" Content="Button3" BorderBrush="#ffffff" BorderThickness="2"/>
        <Button Grid.Row="3" Command="{Binding ElementName=ClickMeCommand}" Background="#1e4ab0" Foreground="#ffffff" Margin="5" Content="Button4" BorderBrush="#ffffff" BorderThickness="2"/>
    </Grid>

</Window>

